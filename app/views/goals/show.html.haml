.main_content
	#goal_top.row
		.col-md-4
			= image_tag @goal.image.url(:medium), class: "goal_image"
		.col-md-8
			#goal_info
				%h1= @goal.name
				%p.description= @goal.description
				%p.description= @goal.start_date
				%p.description= @goal.target_amount
				

	.row
		.col-md-6
			#goal_info
				%h2 Savings Deposits
				%dl
					- @goal.savings_deposits.each do |savings_deposit|
						%dt.description= savings_deposit.amount
						%dd.description= savings_deposit.date
            
		.row
			.col-md-6
				#goal_info
					= render :partial => "savings_chart"


		
	.row
		.col-md-12
			= link_to "Back", root_path, class: "btn btn-default"
			- if user_signed_in?
				= link_to "Edit", edit_goal_path, class: "btn btn-default"
				= link_to "Delete", goal_path, method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-default"

        