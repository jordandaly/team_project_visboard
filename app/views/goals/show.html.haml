.main_content
	#recipe_top.row
		.col-md-4
			= image_tag @goal.image.url(:medium), class: "goal_image"
		.col-md-8
			#goal_info
				%h1= @goal.name
				%p= @goal.description
				%p= @goal.start_date
				%p= @goal.target_amount

	.row
		.col-md-6
			#savings_deposits
				%h2 Savings Deposits
				%ul
					- @goal.savings_deposits.each do |savings_deposit|
						%li= savings_deposit.amount
						%li= savings_deposit.date

		
	.row
		.col-md-12
			= link_to "Back", root_path, class: "btn btn-default"
			- if user_signed_in?
				= link_to "Edit", edit_goal_path, class: "btn btn-default"
				= link_to "Delete", goal_path, method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-default"