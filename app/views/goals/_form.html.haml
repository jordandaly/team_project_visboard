= simple_form_for @goal, html: { multipart: true } do |f|
  .panel-body
    = f.input :name, input_html: { class: 'form-control' }
    = f.input :description, input_html: { class: 'form-control' }
    = f.input :start_date, input_html: { class: 'form-control' }
    = f.input :target_amount, input_html: { class: 'form-control' }
    = f.input :image, input_html: { class: 'form-control' }
  .col-md-6
    %h3 Savings Deposit
    #savings_deposits
      = f.simple_fields_for :savings_deposits do |savings_deposit|
        = render 'savings_deposit_fields', f: savings_deposit
      .links
        = link_to_add_association 'Add Savings Deposit', f, :savings_deposits, class: "btn btn-default add-button"
  = f.button :submit, class: "btn btn-primary"
        
